{% extends 'base.html.twig' %}

{% block title %}{{ instance.title }}{% endblock %}

{% block body %}
<div class="container-fluid mb-3">
    <h1>Position des joueurs dans l'instance {{ instance.title }}</h1>
</div>

{# Boucle sur les checkpoints du jeu #}

{% for checkpoint in checkpointsDatas %}

    <div class="row">
        <div class="col">
            <h2>Nom du checkpoint</h2>
        </div>            
        <div class="col">
            <ul>
                {% for player in checkpoint %}

                <li>{{ player.username }}</li>

                {% endfor %}
            </ul>
        </div>
    </div>
{% endfor %}

{% endblock %}
