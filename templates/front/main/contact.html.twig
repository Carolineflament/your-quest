{% extends 'base.html.twig' %}

{% block title %}Condition général d'utilisation{% endblock %}

{% block body %}
    {{ include('_header_start.html.twig', {'title': 'Contact'}) }}

    <!-- Contact Start -->
    <div class="container-fluid bg-light px-lg-0" style="margin: 2rem 0 6rem 0;">
        <div class="container contact px-lg-0">
            <div class="row g-0 mx-lg-0">
                <div class="col-lg-6 contact-text py-5 wow fadeIn" data-wow-delay="0.5s">
                    <div class="p-lg-5 ps-lg-0">
                        <div class="section-title text-start">
                            <h1 class="display-5 mb-4">Nous contacter</h1>
                        </div>
                        {{ form_start(form) }}
                            <div class="row g-3">
                                <div class="form-error mb-3">
                                    {{ form_errors(form.name) }}
                                    {{ form_errors(form.email) }}
                                    {{ form_errors(form.subject) }}
                                    {{ form_errors(form.message) }}
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        {{ form_widget(form.name) }}
                                        {{ form_label(form.name) }}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        {{ form_widget(form.email) }}
                                        {{ form_label(form.email) }}
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        {{ form_widget(form.subject) }}
                                        {{ form_label(form.subject) }}
                                    </div>
                                </div>
                                    
                                <div class="col-12">
                                    <div class="form-floating">
                                        {{ form_widget(form.message) }}
                                        {{ form_label(form.message) }}
                                    </div>
                                </div>
                                    
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3">Envoyer</button>
                                </div>
                            </div>
                        {{ form_end(form) }}

                        
                    </div>
                </div>
                <div class="col-lg-6 pe-lg-0" style="min-height: 400px;">
                    <div class="position-relative h-100">
                        <img class="position-absolute img-fluid w-100 h-100" src="{{ asset('assets/images/contact-2_800px.jpg') }}" style="object-fit: cover;" alt="Contact">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->

{% endblock %}