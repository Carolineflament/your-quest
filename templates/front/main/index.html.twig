{% extends 'base.html.twig' %}

{% block title %}YourQuest{% endblock %}

{% block body %}

    <!-- Carousel Start -->
    <div class="container-fluid p-0 pb-5">
        <div class="owl-carousel header-carousel position-relative">
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src={{ asset('assets/images/QuestCarousel1-450px.jpg') }} alt="">
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(53, 53, 53, .7);">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12 col-lg-8 text-center">
                                <h5 class="text-white text-uppercase mb-3 animated slideInDown">Vous êtes au point de départ d'un jeu ?</h5>
                                <h1 class="display-3 text-white animated slideInDown mb-4">Bienvenue sur YourQuest !</h1>
                                
                                <p class="fs-5 fw-medium text-white mb-4 pb-2">Scannez le 1er QR code et suivez les indications. En scannant ensuite le QR code de chaque checkpoint, votre temps sera enregistré et permettra de vous classer !</p>
                                <a href="{{ path('front_checkpoint') }}" class="btn btn-primary py-md-3 px-md-5 animated slideInLeft">Commencer à jouer</a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src={{ asset('assets/images/QuestCarousel2-450px.jpg') }} alt="">
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(53, 53, 53, .7);">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12 col-lg-8 text-center">
                                <h5 class="text-white text-uppercase mb-3 animated slideInDown">Vous souhaitez créer votre propre jeu ?</h5>
                                <h1 class="display-3 text-white animated slideInDown mb-4">Bienvenue sur YourQuest !</h1>
                                <p class="fs-5 fw-medium text-white mb-4 pb-2">Organisez votre propre jeu de piste, ses étapes et ses énigmes ! YourQuest va générer des QR codes pour chaque checkpoint, imprimez les et affichez les sur le site de votre jeu.</p>
                                <a href="{{ path('app_backoffice_game_new')}}" class="btn btn-primary py-md-3 px-md-5 animated slideInLeft">Créer votre jeu</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->

    {# Flash message #}
    {{ include('front/_notice_message.html.twig') }}

    <!-- Service Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="section-title text-center">
                <h1 class="display-5 mb-5">Les prochains jeux </h1>
            </div>
            <div class="row g-4">
                {% if games %}
                    {% for game in games %}
                        {% set next_instance = game.nextInstance %}
                        <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="service-item">
                                <div class="overflow-hidden align-img">
                                    <img class="img-fluid" src="{{ asset(app_games_images_directory~game.image  | imagine_filter('my_thumb')) }}" alt="{{game.slug}}">
                                </div>
                                <div class="p-4 text-center border border-5 border-light border-top-0">
                                    <h4 class="mb-3">
                                        <a href="{{ path('front_games_show', {'slug' : game.slug}) }}">{{ game.title }}</a>
                                        {% if "now"|date('c') > next_instance.startAt|date('c') and "now"|date('c') < next_instance.endAt|date('c') %}
                                            <span class="badge bg-danger ms-2">En cours</span>
                                        {% endif %}
                                    </h4>
                                    <p>
                                        <a href="{{ path('app_front_instance_show', {'gameSlug' : game.slug, 'instanceSlug' : next_instance.slug}) }}">
                                            {{ next_instance.startAt|date('d/m/Y') }} - {{ game.city }} ({{ game.postalCode }})
                                        </a>
                                    </p>
                                    {# <a class="fw-medium" href="">Voir le jeu<i class="fa fa-arrow-right ms-2"></i></a> #}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Aucune future session de jeu n'est prévue pour l'instant...</p>
                {% endif %}

            </div>
        </div>
    </div>
    {# End Presentation #}

    {# Next Games #}



    <!-- Team Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="section-title text-center">
                <h1 class="display-5 mb-5">Membres de l'équipe</h1>
            </div>
            <div class="row g-4">
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item">
                        <div class="overflow-hidden position-relative">
                            <img class="img-fluid" src={{ asset('assets/images/Team/Caroline.jpg') }} alt="Caroline">
