                            <div class="team-social">
                                <a class="btn btn-square" href="https://fr.linkedin.com/in/s%C3%A9bastien-g%C3%A9raudie-64858724"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
