{% extends 'base.html.twig' %}

{% block title %}Instance{% endblock %}

{% block body %}
    <div class="container-fluid mb-3">
        <h1>Instance {{ instance.title }} du jeu {{ game.title }}</h1>

        <div class="d-grid gap-2 my-5 d-md-flex justify-content-md-start">
            <a href="{{ path('app_backoffice_instance_index', {'gameSlug': game.slug}) }}"  class="btn btn-outline-secondary btn-sm">Retourner à la liste</a>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Nom de l'instance</th>
                    <td>{{ instance.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ instance.message }}</td>
                </tr>
                <tr>
                    <th>Date de début</th>
                    <td>{{ instance.startAt ? instance.startAt|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Date de fin</th>
                    <td>{{ instance.endAt ? instance.endAt|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_backoffice_instance_edit', {'id': instance.id}) }}" class="btn btn-primary mb-2">Modifier</a>

        {{ include('backoffice/instance/_delete_form.html.twig') }}
    </div>
{% endblock %}
