{% extends 'base.html.twig' %}

{% block title %}Les énigmes du checkpoint{{ checkpoint.title }}{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-end">
        <a href="{{ path('app_backoffice_enigma_index', {'id': checkpoint.id }) }}" class="btn btn-outline-secondary btn-sm">Retourner à la liste</a>
    </div>

    <div class="clearfix"></div>

    <table class="table">
        <tbody>

            <tr>
                <th>Enigme</th>
                <td>{{ enigma.question }}</td>
            </tr>
            <tr>
                <th>Ordre de l'énigme</th>
                <td>{{ enigma.orderEnigma }}</td>
            </tr>
            <tr>
                <th>Créée le</th>
                <td>{{ enigma.createdAt ? enigma.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ enigma.updatedAt ? enigma.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_enigma_edit', {'id': enigma.id}) }}" class="btn btn-primary mb-2">Modifier</a>

    {{ include('backoffice/enigma/_delete_form.html.twig') }}
{% endblock %}
