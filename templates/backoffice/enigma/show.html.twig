{% extends 'base.html.twig' %}

{% block title %}Enigma{% endblock %}

{% block body %}
    <h1>Enigma</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ enigma.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ enigma.question }}</td>
            </tr>
            <tr>
                <th>OrderEnigma</th>
                <td>{{ enigma.orderEnigma }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ enigma.createdAt ? enigma.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ enigma.updatedAt ? enigma.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsTrashed</th>
                <td>{{ enigma.isTrashed ? 'Yes' : 'No' }}</td>
