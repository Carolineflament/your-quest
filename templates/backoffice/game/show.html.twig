{% extends 'base.html.twig' %}

{% block title %}Mon jeu{% endblock %}

{% block body %}
    <div class="container-fluid mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1>{{ game.title }}</h1>
            <a href="{{ path('app_backoffice_game_index') }}" class="btn btn-primary mb-3">Mes jeux</a>
        </div>

        {# CARD GAME #}

        <div class="d-flex justify-content-center ">
            <div class="card mb-3">
                <img src="{{ asset(app_games_images_directory~game.image) }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ game.title }}</h5>
                    <p class="card-text">{{ game.summary }}</p>
                    <p class="card-text"><small class="text-muted">Lieu: {{ game.address }} - {{ game.postalCode }} {{ game.city }}</small></p>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_backoffice_game_edit',{'slug': game.slug}) }}" class="btn btn-primary mb-3">Modifier</a>
                        {{ include('backoffice/game/_status_form.html.twig', {"method": 'show'}) }}
                        {{ include('backoffice/game/_delete_form.html.twig', {"method": 'show'}) }}
                    </div>
                </div>
            </div>
        </div>

        {# END CARD GAME #}

        {# CARD CHECKPOINTS #}
        
        <div class="d-flex justify-content-center ">
            <div class="card mb-3" style="width: 100%;">
                <h2>Les instances</h2>
                <div class="accordion" id="ac-instances">
                    {% for instance in game.instances %}
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="instance-head-{{loop.index}}">
                                <button class="accordion-button text-white
                                {% if "now"|date('c') > instance.startAt|date('c') and "now"|date('Y-m-d') > instance.endAt|date('c') %} 
                                    bg-secondary  
                                {% elseif "now"|date('c') > instance.startAt|date('c') and "now"|date('Y-m-d') < instance.endAt|date('c') %} 
                                    bg-success  
                                {% else %}
                                    bg-primary
                                {% endif %}
                                {% if loop.index > 1 %}collapsed{% endif %}" 
                                
                                type="button" data-bs-toggle="collapse" data-bs-target="#instances-{{loop.index}}" 
                                {% if loop.index > 1 %} 
                                    aria-expanded="false" 
                                {% else %} 
                                    aria-expanded="true" 
                                {% endif %} aria-controls="instances-{{loop.index}}">
                                    Le {{instance.startAt|format_datetime(pattern="dd LLLL Y", locale='fr')}} de {{instance.startAt|date('H:i')}} à {{instance.endAt|date('H:i')}}, à {{game.city}}
                                </button>
                            </h2>
                            <div id="instances-{{loop.index}}" class="accordion-collapse collapse {% if loop.index is same as 1 %}show{% endif %}" aria-labelledby="instance-head-{{loop.index}}" data-bs-parent="#ac-instances">
                                <div class="accordion-body">
                                    <div class="">
                                        <strong>{{instance.message}}</strong>
                                    </div>
                                    <div class="d-grid gap-2 ">
                                        <a href="{{ path('app_backoffice_instance_edit',{'slug': instance.slug}) }}" class="btn btn-primary mb-3">Modifier</a>
                                        <a href="{{ path('app_backoffice_instance_index', {'gameSlug': game.slug}) }}" class="btn btn-primary mb-3">Voir</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                   {% endfor %}
                </div>
            </div>
        </div>

        {# END CARD CHECKPOINTS #}
    </div>
{% endblock %}
