{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ game.slug }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ game.address }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ game.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ game.city }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ game.image }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ game.summary }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ game.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ game.createdAt ? game.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ game.updatedAt ? game.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_game_index') }}">back to list</a>

    <a href="{{ path('app_backoffice_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('backoffice/game/_delete_form.html.twig') }}
{% endblock %}
