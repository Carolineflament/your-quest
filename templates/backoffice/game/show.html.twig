{% extends 'base.html.twig' %}

{% block title %}Mon jeu{% endblock %}

{% block body %}
    <div class="container-fluid mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Mon jeu : {{ game.title }}</h1>
            <a href="{{ path('app_backoffice_game_index') }}" class="btn btn-primary mb-3">Tous mes jeux</a>
        </div>

        <div class="d-flex justify-content-center ">
            <div class="card mb-3" style="width: 60%;">
                <img src="{{ game.image }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ game.title }}</h5>
                    <p class="card-text">{{ game.summary }}</p>
                    <p class="card-text"><small class="text-muted">Lieu: {{ game.address }} - {{ game.postalCode }} {{ game.city }}</small></p>
                    <div class="d-grid gap-2 d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_backoffice_game_edit',{'slug': game.slug}) }}" class="btn btn-primary mb-3">Modifier ce jeu</a>
                        <a href="{{ path('app_backoffice_game_index') }}" class="btn btn-primary mb-3">Tous mes jeux</a>
