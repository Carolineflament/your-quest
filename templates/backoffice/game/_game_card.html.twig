<div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="{{delay[counter]~'s'}}">
    <div class="service-item">
        <div class="overflow-hidden align-img">
            <img  class="img-fluid" src="{{ asset(app_games_images_directory~game.image) }}" class="card-img-top" alt="{{game.slug}}" >
        </div>
        <div class="p-4 text-center border border-5 border-light border-top-0">
            <h4>{{ game.title }}
                {% if is_granted('ROLE_ADMIN') %}
                    <i>(créé par {{ (game.user.pseudo) }})</i>
                {% endif %}
            </h4>
            <div class="small mb-5">
                <address class="mb-0">{{ game.city }} ({{ game.postalCode }})</address>
            </div>
            
                <div class="d-flex justify-content-evenly">
                    <a title="Voir" href="{{ path('app_backoffice_game_show', {'slug': game.slug}) }}" class="btn btn-outline-dark btn-sm mb-4"><i class="display-6 bi bi-eye"></i></a>
                    {{ include('backoffice/game/_status_form.html.twig', {"method": ''}) }}
                    {{ include('backoffice/game/_delete_form.html.twig', {"method": ''}) }}
                </div>
            
        </div>
    </div>
</div>
