{% extends 'backoffice/back_base.html.twig' %}

{% block title %}Checkpoint {{ checkpoint.title }} du jeu {{ game.title }}{% endblock %}

{% block back_body %}
    <div class="d-flex flex-column align-items-end">
        <a href="{{ path('app_backoffice_checkpoint_index', {'gameSlug': game.slug }) }}" class="btn btn-outline-secondary btn-sm">Retourner à la liste</a>
    </div>

    <div class="clearfix"></div>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom du checkpoint</th>
                <td>{{ checkpoint.title }}</td>
            </tr>
            <tr>
                <th>Message de localisation du prochain checkpoint</th>
                <td>{{ checkpoint.successMessage }}</td>
            </tr>
            <tr>
                <th>Ordre du checkpoint</th>
                <td>{{ checkpoint.orderCheckpoint }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ checkpoint.createdAt ? checkpoint.createdAt|date('d-m-Y à H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ checkpoint.updatedAt ? checkpoint.updatedAt|date('d-m-Y à H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
            <div class="text-center">
                <img src="{{ asset('assets/Qrcode/'~checkpoint.id~'qrcode.png') }}" alt="QR code">
            </div>

    <a href="{{ path('app_backoffice_checkpoint_edit', {'id': checkpoint.id}) }}" class="btn btn-primary mb-2">Modifier</a>
        

    {{ include('backoffice/checkpoint/_delete_form.html.twig') }}
{% endblock %}
