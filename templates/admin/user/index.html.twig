    <script>
        var columns = {
            'id':'#',
            'email':'Email',
            'role':'Rôle',
            'username':'Pseudo',
            'lastname':'Nom',
            'firstname':'Prénom',
            'status':'Actif / Inactif',
            'createdAt':'Créer le',
            'updatedAt':'Mis à jour le',
            'actions':'Actions'
        }
        $(document).ready(function() {
            var table = $('#table-sortable').tableSortable({
                data: [],
                columns: columns,
                rowsPerPage: 5,
                pagination: true,
                searchField : $('#searchField'),
                nextText:'<span>Suivant</span>',
                prevText:'<span>Précédent</span>',
                formatHeader:'table-dark',

            });

            $.get('http://localhost:8080/api/users', function(data) {
                // Push data into existing data
                table.setData(data, null, true);

                // or Set new data on table, columns is optional.
                table.setData(data, columns);
            })
        });
    </script>
    
